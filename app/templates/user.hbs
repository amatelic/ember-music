<div class="audio__playlist__controls">
  <div {{action 'showNavigation'}} class="hamburger">{{fa-icon "bars"}}</div>
  {{track-filter filterTracks="filterTracks"}}
  {{#user-dropdown user=model showBackButton=true}}
    {{#link-to "user" }} User {{/link-to}}
    <a {{action 'logOut' }} >Log out</a>  {{/user-dropdown}}
</div>
<div class="user-layout card">
  <div class="user-configuration">
    <div class="form-control">
      <h1>User:</h1>
    </div>
    <div class="form-control">
      <label for="">User:</label>
      {{input type="input" name="name" value=model.username}}
    </div>
    <div class="form-control">
      <label for="">Email:</label>
      {{input disabled="true" type="input" name="name" value=model.email}}
    </div>
    <div class="form-control">
      <img src="{{model.image}}" width="50px" height="50px" />
      {{input id="files" type="file"}}
    </div>
    <div class="form-control">
      <button {{action 'changeData' }} type="button" name="button">Change</button>
    </div>
  </div>
</div>


{{outlet}}

<div class="card">
  <div class="form-control">
    <h1>Login:</h1>
  </div>
  <div class="form-control">
    <label for="">Email:</label>
    {{input type="input" name="name" value=email}}
    {{#unless isValidEmail}}
      <p>Input is not email address</p>
    {{/unless}}
  </div>
  <div class="form-control">
    <label for="">Password:</label>
    {{input type="password" name="name" value=password}}
    {{#unless isEmpty}}
      <p>Input is empty</p>
    {{/unless}}
  </div>
  <div class="form-control">
      <a href="/register">Register</a>
  </div>
  <div class="form-control">
      <button {{action 'loginUser'}} type="button" class="button" name="button">Log in</button>
  </div>
</div>

{{outlet}}

<div class="audio__player">
  <div class="duration__time__range">
    <input onmousedown={{action 'onMouseDown'}}  onmouseup={{action 'onMouseUp'}} type="range" class="player_range" min="0" max={{duration}} value="{{currentTime}}">
  </div>
  <div class="audio__track">
    <div class="flex-1-3 justify-center">
      <p>{{music-timer currentTime}}</p>
    </div>
    <div class="flex-1-3 align-center justify-center">
      <div {{action 'changeTruck' -1 }} class="step__button">{{fa-icon "fa-step-backward"}}</div>
      <div {{action 'toggleTrack'}} class="play__button">
        {{#if toggle}}
          {{fa-icon "pause"}}
        {{else}}
          {{fa-icon "play"}}
        {{/if}}
      </div>
      <div {{action 'changeTruck' 1 }}class="step__button">{{fa-icon "fa-step-forward"}}</div>
    </div>
    <div class="flex-1-3 align-center justify-end">
      <div {{action 'repeat'}} class="{{eq repeatIsActive 'is--Active'}} repeat__button">
        {{fa-icon "repeat"}}
      </div>
      <div class="volume__range  ml-15">
        <input {{action 'setVolume' on="change"}} type="range" class="volume_range" max=100 value="{{volume}}">
      </div>
    </div>
  </div>
</div>

<div class="audio__playlist__header">
  <div>SONG</div>
  <div>ARTIST</div>
  <div>ALBUM</div>
  <div>DATE</div>
</div>
<div class="audio__playlist__body">
  {{#each playlist as |track index|}}
    <div onclick={{action 'selectTrack' index}} class="audio__playlist__item {{eq index playing 'active__track'}}"  >
      <p>{{truncate-text track.name 20}}</p>
      <p>{{truncate-text track.artist 10}}</p>
      <p>{{truncate-text track.album 15}}</p>
      <p>{{moment-from-now track.date}}</p>
    </div>
  {{/each}}
</div>
